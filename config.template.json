# EPUB Translator Configuration Template
# Copy this to config.json and customize as needed

{
  "api_provider": "kimi",
  
  "kimi": {
    "api_key": "",
    "base_url": "https://api.moonshot.cn/v1",
    "model": "moonshot-v1-128k"
  },
  
  "anthropic": {
    "api_key": "",
    "model": "claude-sonnet-4-6"
  },
  
  "translation": {
    "target_language": "zh",
    "target_language_name": "Simplified Chinese (简体中文)",
    "temperature": 0.3,
    "max_tokens": 16384,
    "delay_between_chapters": 1.0
  },
  
  "prompt_customization": {
    "translation_style": "literary",
    "formality": "moderate",
    "preserve_names": true,
    "cultural_adaptation": true
  },
  
  "processing": {
    "skip_files_shorter_than": 50,
    "work_directory": "./epub_work",
    "keep_work_directory": false
  }
}
